					  <fieldset class="container">	  			 			  <div ng-controller="MyController" class="my-controller">			  <div class="pull-right">					  </div>	 	    <div class="row">	      <div class="col-lg-12 col-md-12 container">	          <div class="row">            	            <div class="col-md-6 col-xs-6" style="margin-top:13px;">	          	            </div>	            <div class="col-md-6 col-xs-6" style="margin-top:10px;">			<form class="pure-form" method="post" action="/active_clients_filter" align="right">			  			        <input type="text" placeholder="Search" id="searchtext" name="searchtext">			               <label for="filterby" class="pfont">By:</label>			               <select id="filterby" name="filterby" >			                   <option value="Name">Name</option>			                   <option value="Company">Company</option>			                   <option value="Country">Country</option>			                   <option value="Destination">Destination</option>			                   <option value="Address">Address</option>			                   <option value="ID1">ID</option>			                   <option value="Telephone">Telephone</option>			                   <option value="Email">Email</option>			               </select>			   			               <label for="showfirst" class="pfont">Show First:</label>			               <input type="number" value="5" style="width:60px;" id="showfirst" name="showfirst">			  			        <button type="submit" class="pure-button pure-button-primary">Search</button>						</form>	            </div>	          </div>	          	          <div class="panel">	            <div class="panel-body">	              <ul id="list">	                <table class="table table-bordered" id="blueRow">	                <tr>			              <th>Name</th>			              <th>Company</th>			              <th>Country</th>			  			<th>Address</th>			  			<th>Tel</th>			  			<th>Email</th>			  			<th>Destination</th>	                </tr>                					<% clients.forEach(function(client){%>	                            <tr dir-paginate="product in product | filter:q |" current-page="currentPage">                            <td><%= client.get("Name")%></td>                            <td><%= client.get("Company")%></td>                            <td><%= client.get("Country")%></td>                            <td><%= client.get("Address")%></td>							                            <td><%= client.get("Telephone")%></td>                            <td><%= client.get("Email")%></td>                            <td><%= client.get("Destination")%></td>                        	                            </tr>								 <% }) %>	                </table>	              </ul>	            </div>	          </div>	        	        </div>	         	      </div>	    </div>	  </fieldset>	  	  	  	  